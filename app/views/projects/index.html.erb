<h2>Projects Manager</h2>
<table id="container">
	<tr>
		<th>ID</th>
		<th>Title</th>
		<th>System</th>
		<th>Project Type</th>
		<th>Date Submitted</th>
		<th>Status</th>
		<th>Priority Rating</th>
	</tr>
	<% @projects.each do |p| %>
		<tr>
			<td><%= p.id %></td>
			<td><%= p.title %></td>
			<td><%= p.system %></td>
			<td><%= p.project_type %></td>
			<td><%= p.date_submitted.strftime("%d %b %y") %></td>
			<td><%= p.status %></td>
			<td><%= p.priority_rating %></td>
			<td><%= link_to "Edit", edit_project_path(p) %></td>
			<td><%= link_to "View", p %></td>
		</tr>
	<% end %>
</table>
<br />

<%= link_to "Add New Project", new_project_path, class:"add_proj_button" %><br />
